<Window x:Class="overlay_popup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:overlay_popup"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="none"
        AllowsTransparency="true"
        Topmost="true"
        WindowStartupLocation="CenterScreen"
        Deactivated="onDeactivated"
        >
    <Window.Background>
            <SolidColorBrush Color="#00FFFFFF" />
    </Window.Background>
    <Grid Name="DisplayGrid" ShowGridLines="true"><!-- Single element grid to allow overlapping content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Column="0" Grid.Row="0">
            <StackPanel Orientation="Vertical" DockPanel.Dock="Top" Height="40" Background="Transparent">
                <Border Grid.Row="0" Grid.Column="5" Padding="7" BorderThickness="0" HorizontalAlignment="Right">
                    <Button BorderThickness="0" Click="onMenuClick" Content="⚙" FontSize="16" Padding="5" FontWeight="Bold" Foreground="Gold" Background="Transparent" />
                    <!-- Style="{StaticResource MenuButton}" -->
                </Border>
            </StackPanel>

            <StackPanel DockPanel.Dock="Bottom" Height="40" Background="Transparent" />
            <StackPanel DockPanel.Dock="Left" Width="40" Background="Transparent" />
            <StackPanel DockPanel.Dock="Right" Width="40" Background="Transparent" />

            <Grid Name="ButtonGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </DockPanel>

        <Border Name="MenuPopup" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Visibility="Hidden"
                VerticalAlignment="Top"
                Margin="20,20" Width="300" Padding="5,5"
                Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}">
            <StackPanel>
                <TextBlock Margin="0,5" TextWrapping="Wrap"><Bold>Current menu:</Bold> <Run Text="{Binding Path=CurrentMenu.Name}"></Run></TextBlock>
                <TextBlock Margin="0,5" TextWrapping="Wrap"><Bold>App:</Bold> <Run Text="{Binding Path=ApplicationProcessName}"></Run></TextBlock>
                <TextBlock Margin="0,5" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" MaxHeight="40"><Bold>Window:</Bold> <Run Text="{Binding Path=ApplicationWindowTitle}"></Run></TextBlock>
                <Button Margin="0,5" Click="onConfigure">Configure</Button>
                <Button Margin="0,5" Click="onQuitClick">Quit</Button>
            </StackPanel>
        </Border>

    </Grid>

</Window>
